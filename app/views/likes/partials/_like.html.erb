<div class="likes-wrapper">
  <% if like = likeable.likes.find { |like| like.user.id == current_user.id } %>
    <%= link_to image_tag('thumbs-up.png', alt: 'Thumbs-up'), likes_destroy_path(like_id: like.id) %>
  <% else %>
    <%= link_to image_tag('thumbs-up.png', alt: 'Thumbs-up'), likes_create_path(likeable_id: likeable.id, likeable_type: likeable.class.name) %>
  <% end %>
  <%= likeable.likes.count %>
</div>
